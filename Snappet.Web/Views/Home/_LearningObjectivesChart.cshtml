@using Snappet.Helpers.Resources

<div class="col-md-6 col-sm-6 col-xs-12">
    <div class="x_panel tile fixed_height_320 overflow_hidden">
        <div class="x_title">
            <h2>@Resources.LearningObjectives</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="" style="width:100%">
                <tr>
                    <th style="width:37%;">
                        <p class="">Top 5</p>
                    </th>
                    <th>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-7">
                            <p class="">@Resources.LearningObjectives</p>
                        </div>
                    </th>
                </tr>
                <tr>
                    <td>
                        <canvas id="LearningObjectiveCanvas" height="180" width="180" style="margin: 15px 10px 10px 0"></canvas>
                    </td>
                    <td>
                        <table class="tile_info">
                            <tr v-for="learningObject in topLearningObjectsChartLabels">
                                <td>
                                    <p><i class="fa fa-square red"></i>{{learningObject}}</p>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

