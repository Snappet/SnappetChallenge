@model IEnumerable<SnappetProject.Models.Subject>

@{
    ViewBag.Title = "Snappet";
}
	<style>
	body{
		font: 62.5% "Trebuchet MS", sans-serif;
		margin: 50px;
	}
	.demoHeaders {
		margin-top: 2em;
	}
	#dialog-link {
		padding: .4em 1em .4em 20px;
		text-decoration: none;
		position: relative;
	}
	#dialog-link span.ui-icon {
		margin: 0 5px 0 0;
		position: absolute;
		left: .2em;
		top: 50%;
		margin-top: -8px;
	}
	#icons {
		margin: 0;
		padding: 0;
	}
	#icons li {
		margin: 2px;
		position: relative;
		padding: 4px 0;
		cursor: pointer;
		float: left;
		list-style: none;
	}
	#icons span.ui-icon {
		float: left;
		margin: 0 4px;
	}
	.fakewindowcontain .ui-widget-overlay {
		position: absolute;
	}
	select {
		width: 200px;
	}
	</style>
<div id="chartContainer1" style="height: 300px; width: 100%;"></div>
<div id="chartContainer2" style="height: 300px; width: 100%;"></div>

<script type="text/javascript">
    $(document).ready(function () {
        
        $( "#SubmitDate" ).datepicker();
        //$("#GenerateReport").val("abc");
         
        var chart1 = new CanvasJS.Chart("chartContainer1", {
            theme: "theme2",//theme1
            title: {
                text: "Progress per subject"
            },
            animationEnabled: true,
            data: [
            {
                // Change type to "bar", "splineArea", "area", "spline", "pie","column"etc.
                type: "pie",
                dataPoints: @Html.Raw(ViewBag.DataPoints1)
                }
            ]
        });
        chart1.render();
        var chart2 = new CanvasJS.Chart("chartContainer2", {
            theme: "theme2",//theme1
            title: {
                text: "Subject wise user's progress"
            },
            animationEnabled: true,
            data: [
            {
                // Change type to "bar", "splineArea", "area", "spline", "pie","column"etc.
                type: "splineArea",
                dataPoints: @Html.Raw(ViewBag.DataPoints2)
                }
            ]
                });
        chart2.render();
    });
</script>

@if (ViewBag.ErrorMessageForNoRecord!=null)
{
    <h4>@ViewBag.ErrorMessageForNoRecord</h4>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Please enter date to view the historical reports.</legend>
        <ol>
            <li>
                @*@Html.LabelFor(model => model.ElementAt(0).SubmitDate)*@
                <h3>View historical data, please choose a date:</h3>
                @Html.EditorFor(model => model.ElementAt(0).SubmitDate)
            </li>
        </ol>
        <input type="submit" name="GenerateReport" id="GenerateReport" value="Generate Report" />
    </fieldset>
}



