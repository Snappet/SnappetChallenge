@{
    ViewBag.Title = "Overzicht";
}

@section leftPanel
{
    <div class="well">
        <h4>Filters</h4>

        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        Datum en tijd
                    </h4>
                </div>
                <div id="collapseDateTime">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <label for="dateStart">Datum vanaf</label>
                                <div class="input-group">
                                    <input type="text" class="form-control datepicker" id="dateStart" data-bind="datepicker: dateStartForEditting, endDate: dateEndForEditting">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <label for="timeStart">Tijdstip vanaf</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="timeStart" data-bind="timepicker: timeStartForEditting">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <label for="dateEnd">Datum tot</label>
                                <div class="input-group">
                                    <input type="text" class="form-control datepicker" id="dateEnd" data-bind="datepicker: dateEndForEditting, startDate: dateStartForEditting">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <label for="timeEnd">Tijdstip tot</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="timeEnd" data-bind="timepicker: timeEndForEditting">
                                </div>
                            </div>
                        </div>
                        <div class="row">&nbsp;</div>
                        <div classs="row">
                            <div class="col-lg-12">
                                <button type="button" class="btn btn-primary" data-bind="click: applyFilter">Toepassen</button>
                                <button type="button" class="btn btn-danger" data-bind="click: resetFilter">Reset</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        Groepering
                    </h4>
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsGrouping" id="optionsGroupingTrue" value="true" data-bind="checked: groupingEnabledForEditting" />
                            Groeperen aan
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsGrouping" id="optionsGroupingFalse" value="false" data-bind="checked: groupingEnabledForEditting" />
                            Groeperen uit
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section content {

    <h2>Overzicht van antwoorden</h2>

    <!-- ko if: groupingEnabled -->
    <div class="panel-group" id="accordion">
        <!-- ko foreach: uniqueDomains -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" data-bind="attr: { href: '#collapse' + $index() }, text: $data"></a>
                </h4>
            </div>
            <div class="panel-collapse collapse in" data-bind="attr: { id: 'collapse' + $index() }">
                <div class="panel-body">
                    <table class="table table-hover dataTable">
                        <thead>
                            <tr>
                                <th>Datum</th>
                                <th>Correct</th>
                                <th>Progress</th>
                                <th>UserID</th>
                                <th>ExcerciseID</th>
                                <th>Difficulty</th>
                                <th>Subject</th>
                                <th>Objective</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- ko foreach:  $root.items.index.Domain()[$data] -->
                            <tr data-bind="css: { success: Correct(), danger: !Correct() }">
                                <td data-bind="text: parsedDate"></td>
                                <td data-bind="text: Correct"></td>
                                <td data-bind="text: Progress"></td>
                                <td data-bind="text: UserId"></td>
                                <td data-bind="text: ExerciseId"></td>
                                <td data-bind="text: Difficulty"></td>
                                <td data-bind="text: Subject"></td>
                                <td data-bind="text: LearningObjective"></td>
                            </tr>
                            <!-- /ko -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /ko -->

    </div>
    <!-- /ko -->
    <!-- ko ifnot: groupingEnabled -->
    <table class="table table-hover dataTable">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Correct</th>
                <th>Progress</th>
                <th>UserID</th>
                <th>ExcerciseID</th>
                <th>Difficulty</th>
                <th>Subject</th>
                <th>Domain</th>
                <th>Objective</th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach:  items -->
            <tr data-bind="css: { success: Correct(), danger: !Correct() }">
                <td data-bind="text: parsedDate"></td>
                <td data-bind="text: Correct"></td>
                <td data-bind="text: Progress"></td>
                <td data-bind="text: UserId"></td>
                <td data-bind="text: ExerciseId"></td>
                <td data-bind="text: Difficulty"></td>
                <td data-bind="text: Subject"></td>
                <td data-bind="text: Domain"></td>
                <td data-bind="text: LearningObjective"></td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
    <!-- /ko -->
}

@section scripts
{
    <script language="javascript" type="text/javascript">
        "use strict";

        var sc = sc || {};

        $(function () {
            sc.pages.overview.initialize({
                defaultStartDate: "@AppSettings.DefaultDateTimeStart.ToString("dd-MM-yyyy")",
                defaultEndDate: "@AppSettings.DefaultDateTimeEnd.ToString("dd-MM-yyyy")",
                defaultStartTime: "@AppSettings.DefaultDateTimeStart.ToString("HH:mm:ss")",
                defaultEndTime: "@AppSettings.DefaultDateTimeEnd.ToString("HH:mm:ss")",
                pageSize: 100,
                scrollSelector: ".dataTable tbody tr:last"
            });
        });
    </script>
}