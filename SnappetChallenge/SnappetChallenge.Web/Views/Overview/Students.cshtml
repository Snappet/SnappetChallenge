
@{
    ViewBag.Title = "Students";
}
@section content
{
    <h3>Overzicht van resultaten per student</h3>
    <div class="container-fluid">
        <div class="row">
            <h4>[Leerdoel]</h4>
            <div id="chartLearningObjective" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
        </div>
        <div class="row">
            <h5>Resultaten per leerling</h5>
            <div id="student1chart" style="min-width: 310px; height: 1000px; margin: 0 auto"></div>
        </div>
    </div>

}

@section scripts
{
    @Scripts.Render("~/bundles/highcharts")
    <script language="javascript" type="text/javascript">
        $(function() {
            $('#chartLearningObjective').highcharts({
                chart: {
                    zoomType: 'xy'
                },
                title: {
                    text: 'Overzicht voortgang'
                },
                xAxis: [
                    {
                        categories: ['Opgave 1', 'Opgave 2', 'Opgave 3', 'Opgave 4', 'Opgave 5', 'Opgave 6'],
                        labels: {
                            arotation: -45
                        }
                    }
                ],
                yAxis: [
                    {
// Primary yAxis
                        labels: {
                            format: '{value}',
                            style: {
                                color: Highcharts.getOptions().colors[2]
                            }
                        },
                        title: {
                            text: 'Moeilijkheid',
                            style: {
                                color: Highcharts.getOptions().colors[2]
                            }
                        },

                    }, {
// Secondary yAxis
                        gridLineWidth: 0,
                        title: {
                            text: 'Aantal gemaakt',
                            style: {
                                color: Highcharts.getOptions().colors[0]
                            }
                        },
                        labels: {
                            format: '{value}',
                            style: {
                                color: Highcharts.getOptions().colors[0]
                            }
                        },
                        opposite: true
                    }, {
// Tertiary yAxis
                        gridLineWidth: 0,
                        title: {
                            text: 'Foutpercentage',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        labels: {
                            format: '{value} %',
                            style: {
                                color: Highcharts.getOptions().colors[1]
                            }
                        },
                        opposite: true
                    }
                ],
                tooltip: {
                    shared: true
                },
                legend: {
                    layout: 'vertical',
                    align: 'left',
                    x: 80,
                    verticalAlign: 'top',
                    y: 55,
                    floating: true,
                    backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
                },
                series: [
                    {
                        name: 'Moelijkheidsgraad',
                        type: 'spline',
                        yAxis: 0,
                        data: [255.7651534, 219.1351858, 186.4024222, 119.1351858, 86.4024222, 53.4024222]
                    }, {
                        name: 'Gemaakte opgaven',
                        type: 'spline',
                        yAxis: 1,
                        data: [200, 187, 136, 100, 93, 77],
                        dashStyle: 'shortdot',
                    }, {
                        name: 'Foutpercentage',
                        type: 'spline',
                        data: [0.82, 4.5, 10.0, 11.7, 14.1, 17],
                        yAxis: 2,
                    }
                ]
            });

            $('#student1chart').highcharts({
                chart: {
                    type: 'bar'
                },
                title: {
                    text: 'Voortgang per leerling'
                },
                xAxis: {
                    categories: ["Lursa Rul",
                                "Tignor Wulfek",
                                "Tihl Linarack",
                                "Kaftter Ilonari",
                                "K Adion",
                                "Kalim Zulor",
                                "Qua Solazarn",
                                "Koord Simparri",
                                "Torin Laggal",
                                "mpek Kul",
                                "K Gensa",
                                "Kurn Juriss",
                                "Kulan Messesh",
                                "Ratak Zalcveg",
                                "at Rashtesh",
                                "Torin Galann",
                                "at Wulfek",
                                "Gorkon Messesh",
                                "K Nivalli",
                                "Gorkon Qarmduct"]
                },
                yAxis: [
                    {
                        title: {
                            text: 'Moeilijkheid',
                        }
                    }, {
                        title: {
                            text: 'Foutpercentage',
                        }
                    },
                    {
                        title: {
                            text: 'Aantal gemaakte opgaven',
                        }
                    },
                ],
                legend: {
                    reversed: true
                },
                series: [
                    {
                        name: 'Voortgang',
                        data: [100, 80, 70, 68, 66, 63, 62, 57, 56, 53, 50, 43, 35, 30, 26, 23, 18, 10, 8, 7],
                        yAxis: 0
                    }, {
                        name: 'Foutpercentage',
                        data: [0.5, 2, 3, 3, 4, 6, 7, 9, 12, 13, 15, 18, 20, 25, 30, 31, 35, 37, 40, 45],
                        yAxis: 1
                    }, {
                        name: 'Aantal gemaakte opgaven',
                        data: [200, 200, 190, 190, 190, 189, 180, 170, 160, 150, 140, 130, 120, 110, 100, 95, 94, 90, 80, 75],
                        yAxis: 2
                    }
                ]
            });

        })
    </script>
}
